<!DOCTYPE html>
<html>
  <head>
    <title>Todo or NotTodo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<% if logged_in? %>
  	<div style='float: right;'>
      <%= link_to "Home", todo_lists_path %> |
  		You are logged in as <%= link_to "#{current_user.login}", account_path(session[:user_id])  %> |
  		<%= link_to "Logout", logout_path, data: {method: :delete} %>
  	</div>
  	<% end %>

  	<% flash.each do |key, value| %>
  		<%= content_tag :p, value, id: key %>
  	<% end %>

    <%= yield %>

  </body>
</html>
