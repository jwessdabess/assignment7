<%= form_for [@todo_list, @todo_item] do |form| %>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.text_field :due_date, id: :todo_item_due_date %>
  </div>
  <br>

  <div class="field">
    <%= form.label :task_title %>
    <%= form.text_field :task_title, id: :todo_item_task_title %>
  </div>
  <br>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :todo_item_description %>
  </div>
    <br>

  <div class="actions">
    <%= form.submit %>
  </div>
  <br>
<% end %>
