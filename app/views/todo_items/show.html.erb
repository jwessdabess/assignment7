<h1>
  <%= @todo_item.task_title %>
</h1>

<p>
  <strong>Due date:</strong>
  <%= @todo_item.due_date %>
</p>

<p>
  <strong>Status:</strong>
  <% if @todo_item.done %>      

        <span class="done">
                    <%= "Donezo!" %>
        </span>
        
    <% else %>

        <span class="not_done">
                    <%= "Will do soon!" %>
        </span>
    <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @todo_item.description %>
</p>

<%= link_to 'Edit', edit_todo_list_todo_item_path(2,4) %> |
<%= link_to 'Back', todo_list_path(@todo_list) %>